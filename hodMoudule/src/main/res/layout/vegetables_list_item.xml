<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="6">

        <ImageView
            android:id="@+id/iv_vegetable_image"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1.6"
            android:src="@color/light_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/tv_vegetable_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_vegetable_price_by_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PriceByWeight"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="4"
                android:paddingStart="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_weight="2.8"
                    >

                <TextView
                    android:id="@+id/tv_vegetable_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_vegetable_weight_or_piece"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="250g"
                    android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    >

                    <Button
                        android:id="@+id/btn_add_vegetable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:includeFontPadding="false"
                        android:text="Add"
                        />

                    <LinearLayout
                        android:id="@+id/ll_edit_items"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:visibility="gone"
                        >

                        <TextView
                            android:id="@+id/tv_add_item"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="+"
                            android:gravity="center"
                            android:textSize="24sp"
                            />

                        <TextView
                            android:id="@+id/tv_item_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:gravity="center"
                            android:textSize="24sp"
                            />

                        <TextView
                            android:id="@+id/tv_remove_item"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="-"
                            android:gravity="center"
                            android:textSize="24sp"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        />

</LinearLayout>